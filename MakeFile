
SRC_DIR = ./src
OBJ_DIR = ./obj
BIN_DIR = ./bin
UTL_DIR = ./src/util
INC_DIR = \
		./src \
		-I ./src/util \

GCCFLAGS += \
	-g \
	-fsanitize=address \


OBJ_SRC += \
	$(SRC_DIR)/main.cpp \
	$(SRC_DIR)/ATM.cpp \
	$(SRC_DIR)/bank.cpp \
	$(SRC_DIR)/user.cpp \
	#$(SRC_DIR)/util/queue.c \

TARGET_OBJ =\
	$(patsubst %.c,%.o,$(OBJ_SRC))

all : my_atm

my_atm: $(TARGET_OBJ)
	@mkdir -p $(BIN_DIR)
	g++ -o    $(BIN_DIR)/$@ $(GCCFLAGS) $^ -I$(INC_DIR)

.c.o:
	g++ -c $< -o $@ -I$(INC_DIR)

-include $(OBJS:.o=.d)

clean:
	@rm -vf $(BIN_DIR)/*
	@rm -vf $(OBJ_DIR)/*.o
	@rm -vf $(SRC_DIR)/*.o
	@rm -vf $(UTL_DIR)/*.o